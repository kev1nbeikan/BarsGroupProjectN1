@model Delivery.ProductAPI.Domain.Product;

@{
}

<table class="table table-striped table-bordered">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Title</th>
        <th scope="col">Description</th>
        <th scope="col">Composition</th>
        <th scope="col">Price</th>
        <th></th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <th scope="row">@Model.Id</th>
        <td>@Model.Title</td>
        <td>@Model.Description</td>
        <td>@Model.Composition</td>
        <td>@Model.Price</td>
        <td style="text-align: center">
            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        </td>
        <td style="text-align: center">
            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
        </td>
    </tr>
