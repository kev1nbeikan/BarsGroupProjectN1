@model CourierViewModel;

@{
    ViewData["Title"] = "Service Page";
}

<form class="form-inline row g-3" asp-controller="Courier" asp-action="UpdateCourierStatus" asp-route-id="@Model.Id" method="POST">
    <div class="container mt-5">
        <h1 class="text-center mb-4">Courier Profile Menu</h1>
        <div class="menu-grid">
            <div class="input-group-append">
                @{
                    switch (@Model.Status)
                    {
                        case false:
                            <a type="submit" class="btn btn-primary">
                                Не на работе
                            </a>
                            break;
                        case true:
                            <button type="submit" class="btn btn-success">
                                На работе
                            </button>
                            break;
                    }
                }
            </div>
        </div>
    </div>
</form>