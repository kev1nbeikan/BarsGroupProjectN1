@using CourierService.Core.Models.Code
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model CourierViewModel;

@{
    ViewData["Title"] = "Профиль";
}

<form class="form-inline row g-3" asp-controller="Courier" asp-action="UpdateCourierStatus" asp-route-id="@Model.Id" method="POST">
    <div class="container mt-5">
        <h1 class="text-center mb-4">Курьер🚲</h1>
        <div class="menu-grid">
            <div class="input-group-append">
                @switch (@Model.Status)
                {
                    case CourierStatusCode.NotWork:
                        <button type="submit" name="status" value="NotWork" class="btn btn-outline-primary">
                            Не на работе
                        </button>
                        <button type="submit" name="status" value="OnWork" class="btn btn-primary">
                            На работе
                        </button>
                        <button type="submit" name="status" value="Active" class="btn btn-primary">
                            Активен
                        </button>
                        break;
                    case CourierStatusCode.OnWork:
                        <button type="submit" name="status" value="NotWork" class="btn btn-primary">
                            Не на работе
                        </button>
                        <button type="submit" name="status" value="OnWork" class="btn btn-outline-primary">
                            На работе
                        </button>
                        <button type="submit" name="status" value="Active" class="btn btn-primary">
                            Активен
                        </button>
                        break;
                    case CourierStatusCode.Active:
                        <button type="submit" name="status" value="NotWork" class="btn btn-primary">
                            Не на работе
                        </button>
                        <button type="submit" name="status" value="OnWork" class="btn btn-primary">
                            На работе
                        </button>
                        <button type="submit" name="status" value="Active" class="btn btn-outline-primary">
                            Активен
                        </button>
                        break;
                }
            </div>
        </div>
    </div>
</form>